{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@shared/*": ["shared/*"]
    },
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "shared/**/*.ts" 
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
